% this file is pshchelo.sty
% common TeX-styles for Pavlo Shchelokovskyy
\ProvidesPackage{pshchelo}

%creates nonumbered display equation #1 with punctuation sign #2 after it
\newcommand{\eqnonum}[2]
 {
 \begin{equation*}
 #1
 \;\;#2
 \end{equation*}
 }

%creates numbered display equation #2 with punctuation sign #3 after it and label #1
\newcommand{\eqn}[3]
 {
 \begin{equation} \label{#1}
 #2
 \;\;#3
 \end{equation}
 }

%plus-sign for super/sub-script
\newcommand{\splus}
 {
 {\scriptscriptstyle{+}}
 } 

%creates a figure from file "figs/#1.pdf"
%with file name as a label, width #2 cm, caption #3 and label fig:#1
\newcommand{\fig}[3]{
	\begin{figure}[!htbp]
		\begin{center}
			\includegraphics[width=#2 cm]{figs/#1.pdf}
			\caption{#3}
			\label{fig:#1}
		\end{center}
	\end{figure}
}

\newcommand{\Fref}[1]{Figure~\ref{#1}}
\newcommand{\fref}[1]{figure~\ref{#1}}
\newcommand{\Eref}[1]{Equation~\ref{#1}}
\newcommand{\eref}[1]{equation~\ref{#1}}
\newcommand{\Sref}[1]{Section~\ref{#1}}
\newcommand{\sref}[1]{section~\ref{#1}}